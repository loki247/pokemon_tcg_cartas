<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="166dp"
            android:layout_height="136dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/pokemon_tcg_logo" />

        <TextView
            android:id="@+id/labelNombre"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Carta:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/nombrePokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Buscar Carta"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:onClick="ListaPokemonActivity"
                android:text="Buscar"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationX="15dp"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:onClick="BusquedaTipoActivity"
                android:text="Buscar por Tipo"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationX="15dp"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="BusquedaEdicionActivity"
                android:text="Buscar por EdiciÃ³n"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="144dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Cartas VMAX:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantVmax"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:text="obteniendo datos..."
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="143dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Cartas V:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantV"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:text="obteniendo datos..."
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Cartas V-STAR:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantVstar"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:text="obteniendo datos..."
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="141dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Cartas Mega:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantMega"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:text="obteniendo datos..."
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="141dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Cartas EX:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantEx"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:text="obteniendo datos..."
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="141dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Cartas GX:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cantGx"
            android:layout_width="255dp"
            android:layout_height="30dp"
            android:text="obteniendo datos..."
            android:textAlignment="center"
            android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>