<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?android:colorBackground">

        <ImageView
            android:layout_width="166dp"
            android:layout_height="136dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/pokemon_tcg_logo" />

        <TextView
            android:id="@+id/labelNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carta:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginTop="12dp"/>

        <AutoCompleteTextView
            android:id="@+id/nombrePokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar Carta"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="?attr/colorOnBackground"
            android:textColorHint="?attr/colorOnBackground"/>

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:onClick="ListaPokemonActivity"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnVerSets"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ver Sets"
            android:onClick="BusquedaEdicionActivity"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:layout_gravity="end"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
